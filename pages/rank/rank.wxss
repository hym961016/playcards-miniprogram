/* pages/rank/rank.wxss */

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--white);
  height: 100rpx;
  margin-top: 10rpx;
  font-weight: bolder;
  font-size: 36rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .1);
}

.title image {
  width: 42rpx;
  margin-right: 10rpx;
}

.content {
  display: flex;
  flex-direction: column;
}

.rank-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--white);
  border-bottom: 1rpx solid rgba(0, 0, 0, .1);
}

.rank-item image {
  width: 48rpx;
  flex-basis: 42rpx;
  margin-right: 10rpx;
}

.rank-item .detail {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rank-item .detail .userinfo {
  display: flex;
  align-items: center;
}

.rank-item .detail .amount {
  font-weight: bold;
}