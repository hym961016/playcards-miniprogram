/* pages/room/room.wxss */
.solids-bottom-blue::after {
  border-bottom: 8rpx solid #82e968;
}

.fix-bottom-btn {
  background-color: var(--white);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9;
  padding-bottom: env(safe-area-inset-bottom);
}

.message-wrapper {
  height: calc(100vh - 100rpx - 254rpx - 66rpx - env(safe-area-inset-bottom));
}

.cu-chat .cu-item {
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  justify-content: space-between;
  align-items: center;
}

.cu-dialog {
  width: 600rpx;
}

.cu-dialog .close-action {
  width: 75rpx;
  height: 75rpx;
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.input-wrapper {
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  width: 420rpx;
  height: 68rpx;
  margin: 10rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.input-wrapper input {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  font-weight: bold;
  color: var(--orange);
  text-align: center;
}

.input-wrapper .input-plc {
  text-align: center;
}

.cu-bar .action {
  height: 100rpx;
}

.cu-bar .action:first-child {
  margin: 0;
}

.cu-bar .action:last-child {
  margin: 0;
}