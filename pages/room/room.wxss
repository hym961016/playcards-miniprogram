/* pages/room/room.wxss */
.solids-bottom-blue::after {
  border-bottom: 8rpx solid #82e968;
}

.fix-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9;
}

.fix-bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.message-wrapper {
  margin-top: 316rpx;
  height: calc(100vh - 124rpx - 316rpx - env(safe-area-inset-bottom));
}

